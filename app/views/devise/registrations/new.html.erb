
<form>
  <div class="card shadow rounded mx-auto mt-3 edit-profile-card">
    <div class="card-header">
      <h2 class="text-center">Sign up</h2>
    </div>
    <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <strong><%= f.label :email %></strong> <br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <strong><%= f.label :username %></strong> <br>
      <%= f.text_field :username %>
    </div>

    <div class="form-group">
      <strong>Upload Profile Pic: </strong><br>
      <%= f.file_field :avatar %>
    </div>

    <div class="form-group">
      <strong><%= f.label :password %></strong><br>
      <%= f.password_field :password, autocomplete: "off" %>
      <% if @minimum_password_length %>
      <small id="formHelp" class="form-text text-muted"><%= @minimum_password_length %> characters minimum</small>
      <% end %>
    </div>

    <div class="form-group">
      <strong><%= f.label :password_confirmation %></strong><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %> 
  </div>
  </div>
</form>

