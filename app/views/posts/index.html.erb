<%= render "modal" %>

<p id="notice"><%= notice %></p>

<h1 class="d-flex justify-content-center">Posts</h1>
  <div class="container">
<table class="table table-hover">

  <thead>
    <tr>
      <th>Subject</th>
      <th>Author</th>
      <th>Blog entry</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.username %></td>
        <td><%= post.blog_entry.truncate(358) %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>

</table>
</div>
<br>

<%= link_to 'New Post', new_post_path, class: "btn btn-sm btn-info float-right" %>
