<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.username %>
</p>

<p>
  <strong>Blog entry:</strong><br>
  <%= @post.blog_entry %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %>


